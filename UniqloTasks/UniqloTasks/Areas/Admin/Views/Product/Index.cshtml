@using UniqloTasks.ViewModels.Commons
@model List<Product>
@{
    ViewData["Title"] = "Index";
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Products</h6>
        <a class="btn btn-primary" asp-controller="Product" asp-action="Create">Create new</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Brand</th>
                        <th>Cost price</th>
                        <th>Sell price</th>
                        <th>Discount</th>
                        <th>Stock count</th>
                        <th>IsDeleted</th>
                        <th colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td><img src="~/imgs/products/@item.CoverImage" width="70" /></td>
                            <td>@item.Name</td>
                            <td>@item.Brand?.Name</td>
                            <td>@item.CostPrice</td>
                            <td>@item.SellPrice</td>
                            <td>@item.Discount</td>
                            <td>@item.Quantity</td>
                            <td>@item.IsDeleted</td>


                            <td><a class="btn btn-outline-info" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a> </td>
                            <td>
                                <a class="btn btn-outline-success" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                                @if (item.IsDeleted == true)
                                {
                                <td>
                                    <a class="btn btn-dark" asp-controller="Product" asp-action="Show" asp-route-id="@item.Id">Show</a>
                                </td>
                                }
                                else
                                {
                                <td>
                                    <a class="btn btn-outline-dark" asp-controller="Product" asp-action="Hide" asp-route-id="@item.Id">Hide</a>
                                </td>
                                }
                           
                        </tr>
                    }
                </tbody>
            </table>
        </div>
                <partial name="_PaginationPartial" model="@(ViewBag.PaginationItems as PaginationItemsVM)">

    </div>
</div>
