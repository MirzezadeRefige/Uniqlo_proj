@{
    ViewData["Title"] = "Index";
}
@model List<Brand>


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Brands</h6>
        <a class="btn btn-primary" asp-controller="Brand" asp-action="Create">Create new</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Brand name</th>
                        <th>IsDeleted</th>

                        <th colspan="3">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.IsDeleted</td>

                            <td><a class="btn btn-outline-info" asp-controller="Brand" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                            <td><a class="btn btn-outline-success" asp-controller="Brand" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                            @if (item.IsDeleted == true)
                            {
                                <td>
                                    <a class="btn btn-dark" asp-controller="Brand" asp-action="Show" asp-route-id="@item.Id">Show</a>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <a class="btn btn-outline-dark" asp-controller="Brand" asp-action="Hide" asp-route-id="@item.Id">Hide</a>
                                </td>
                            }

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <partial name="_PaginationPartial" model="ViewBag.Pagination as PaginationItemsVM" />

    </div>
</div>